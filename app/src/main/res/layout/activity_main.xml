<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textStyle="italic"
        android:textSize="35sp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/scoreLevel"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/gameFrame"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#2196F3">

        <ImageView
            android:id="@+id/car"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:src="@drawable/car"
            android:visibility="invisible">

        </ImageView>

        <ImageView
            android:id="@+id/shit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/shit"
            android:visibility="invisible">

        </ImageView>

        <ImageView
            android:id="@+id/food2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/food2"
            android:visibility="invisible"></ImageView>

        <ImageView
            android:id="@+id/food"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/food"
            android:visibility="invisible"></ImageView>

        <LinearLayout
            android:id="@+id/startLayout"
            android:layout_width="match_parent"
            android:layout_height="558dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="接著零食貨品獲得分數\n仲要記住避開便便呀!!!"
                android:textColor="#CDDC39"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="按住畫面向右移動購物車\n    放開便會向左邊移動"
                android:textColor="#952424"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/highScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="    獲得禮券分數: 150\n達到分數後按換取禮券\n          以得到禮券"
                android:textColor="#000"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/startGame"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"

                android:background="#00FF0A"
                android:onClick="startGame"
                android:text="開始"
                android:textSize="24sp" />

            <Button
                android:id="@+id/quitGame"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#00FF0A"
                android:onClick="quitGame"
                android:text="換取禮券"
                android:textSize="24sp" />


        </LinearLayout>

    </FrameLayout>


</LinearLayout>