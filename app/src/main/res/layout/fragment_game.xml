<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:visibility="visible"
    tools:context=".game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/gametv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="目標分數:150"
            android:textColor="#000"
            android:textSize="20sp"
            android:visibility="invisible"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/scoreLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="請登入"
            android:textColor="#000"
            android:textSize="35sp"
            android:textStyle="italic" />


        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_stop_btn3home"
            android:visibility="invisible" />

        <Button
            android:id="@+id/pauseGame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/ic_media_pause"
            android:visibility="invisible" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/gameFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="100dp"
        android:background="#3F51B5"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/car"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:src="@drawable/car"
            android:visibility="invisible">

        </ImageView>

        <ImageView
            android:id="@+id/shit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/shit"
            android:visibility="invisible">

        </ImageView>

        <ImageView
            android:id="@+id/food2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/food3"
            android:visibility="invisible"></ImageView>

        <ImageView
            android:id="@+id/food3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/food2"
            android:visibility="invisible"></ImageView>

        <ImageView
            android:id="@+id/food4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/food4"
            android:visibility="invisible"></ImageView>

        <ImageView
            android:id="@+id/food5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/food5"
            android:visibility="invisible"></ImageView>

        <ImageView
            android:id="@+id/food"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:src="@drawable/food"
            android:visibility="invisible">

        </ImageView>

        <LinearLayout
            android:id="@+id/startLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="    接著貨品獲得分數\n仲要記住避開便便呀!!!"
                android:textColor="#CDDC39"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="按住畫面向右移動購物車\n    放開便會向左邊移動"
                android:textColor="#FF9800"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="便便  =-10分"
                android:textColor="#A4FF0000"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/highScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="         蔬菜 = 10分\n         香蕉 = 15分\n         薯片 = 15分\n         牛扒 = 20分\n         零食 = 30分\n達到分數後按換取禮券\n          以得到禮券"
                android:textColor="#8BC34A"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/startGame"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="開始"
                android:textSize="24sp" />

            <Button
                android:id="@+id/quitGame"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="換取禮券"
                android:textSize="24sp" />


        </LinearLayout>

    </FrameLayout>


</LinearLayout>